<preset>
	<!-- MOVEMENT -->
	<input name="UAMoveForward">
		<btn name="ps4LeftThumbUp" />
	</input>
	<input name="UAMoveBack">
		<btn name="ps4LeftThumbDown" />
	</input>
	<input name="UAMoveLeft">
		<btn name="ps4LeftThumbLeft" />
	</input>
	<input name="UAMoveRight">
		<btn name="ps4LeftThumbRight" />
	</input>
	<input name="UAToggleTurbo">
		<btn name="ps4ThumbLeft" />
	</input>
    <input name="UAWalkForward">
		<btn name="ps4LeftThumbUp" />
    </input>
    <input name="UAWalkBack">
		<btn name="ps4LeftThumbDown" />
    </input>
    <input name="UAWalkLeft">
		<btn name="ps4LeftThumbLeft" />
    </input>
    <input name="UAWalkRight">
		<btn name="ps4LeftThumbRight" />
    </input>
	
	<!-- Jump, Climb -->
	<input name="UAGetOver">
        <btn name="ps4A">
			<event name="clickorhold" />
		</btn>
    </input>
	<input name="UAStance">
        <btn name="ps4B" />
	</input>
	
	<!-- Leaning -->
	<input name="UALeanLeft">
        <btn name="ps4ShoulderLeft" />
	</input>
	<input name="UALeanRight">
        <btn name="ps4ShoulderRight" />
	</input>
		
	<!-- CAMERA -->	
	<input name="UAAimLeft">
		<btn name="ps4RightThumbLeft" />
	</input>
	<input name="UAAimRight">
		<btn name="ps4RightThumbRight" />
	</input>
	<input name="UAAimUp">
		<btn name="ps4RightThumbUp" />
	</input>
	<input name="UAAimDown">
		<btn name="ps4RightThumbDown" />
	</input>
	
	<!-- Change Perspective -->
	<input name="UAPersonView">
		<btn name="ps4ThumbRight" >
			<event name="doubleclick" />
		</btn>		
	</input>
	
	<!-- Freelook Modifier -->
	<input name="UALookAround">
		<btn name="ps4ShoulderLeft" >
			<event name="hold" />
		</btn>
	</input>
	
	<!-- Eyezoom -->
	<input name="UAZoomInToggle">
		<btn name="ps4ShoulderLeft" >
      <event name="doubleclick" />
		</btn>
	</input>

	<!-- Switch to Iron Sights -->
	<input name="UAADSToggle">
		<btn name="ps4ThumbRight" />
	</input>
	
	<!-- Switch between Iron Sights and Optics, Zoom in Optics -->
    <input name="UAZoomInOptics">
		<btn name="ps4PadRight">
			<event name="click" />
		</btn>	
    </input>
    <input name="UAZoomOutOptics">
		<btn name="ps4PadRight" >
			<event name="hold" />
		</btn>	
    </input>
	
	<!-- ACTIONS -->
	
	<!-- Inventory toggle -->
	<input name="UAGear">
		<btn name="ps4View" />
	</input>

	<!-- Attack -->
	<input name="UAFire">
		<btn name="ps4TriggerRight" />
	</input>
	<input name="UAHeavyMeleeAttack">
		<btn name="ps4Y" >
			<event name="hold" />
		</btn>
	</input>
	
	<input name="UAHoldBreath">
        <btn name="ps4ThumbLeft" />
    </input>
	
	<!-- User Action -->
	<input name="UADefaultAction">
		<btn name="ps4TriggerRight" />
	</input>
	
	<!-- Enviro Interaction -->
	<input name="UAAction">
		<btn name="ps4X" />
	</input>

	<!-- Scrolling Interaction -->
	<input name="UAPrevAction">
		<btn name="ps4PadUp" />
	</input>

	<input name="UADropItem">
		<btn name="ps4X" >
			<event name="hold" />
		</btn>	
	</input>

	<!-- Raise Hands -->
	<input name="UATempRaiseWeapon">
		<btn name="ps4TriggerLeft" />
	</input>
	
	<!-- Firearms Reload, Unjam -->
	<input name="UAQuickReload">
		<btn name="ps4Y" >
			<event name="press" />
		</btn>	
	</input>
	
	<!-- Firearms Zeroing -->
	<input name="UAZeroingUp">
		<btn name="ps4PadUp" />
	</input>
	<input name="UAZeroingDown">
		<btn name="ps4PadDown" />
	</input>
	
	<!-- Firearms Modes -->
	<input name="UAToggleWeapons">
		<btn name="ps4PadLeft" />
	</input>
	
	<!-- COMMUNICATION -->
	
	<!-- Voice Over Network -->
	<input name="UAVoiceOverNet">
		<btn name="ps4PadDown" />
	</input> 
	
	<!-- VEHICLES -->
	<input name="UACarLeft">
		<btn name="ps4LeftThumbLeft" />
	</input>
	<input name="UACarRight">
		<btn name="ps4LeftThumbRight" />
	</input>
	<input name="UACarForward">
		<btn name="ps4TriggerRight" />
	</input>
	<input name="UACarBack">
		<btn name="ps4TriggerLeft" />
	</input>
	<input name="UACarShiftGearUp">
		<btn name="ps4B" />
	</input>
	<input name="UACarShiftGearDown">
		<btn name="ps4A" />
	</input>
	
	<!-- USER INTERFACE -->	
	<input name="UAUILeft">
		<btn name="ps4PadLeft" />
		<btn name="ps4LeftThumbLeft" />
		<btn name="ps4RightThumbLeft" />
	</input>
	<input name="UAUIRight">
		<btn name="ps4PadRight" />
		<btn name="ps4LeftThumbRight" />
		<btn name="ps4RightThumbRight" />
	</input>
	<input name="UAUIUp">
		<btn name="ps4PadUp" />
		<btn name="ps4LeftThumbUp" />
		<btn name="ps4RightThumbUp" />
	</input>
	<input name="UAUIDown">
		<btn name="ps4PadDown" />
		<btn name="ps4LeftThumbDown" />
		<btn name="ps4RightThumbDown" />
	</input>
	
	<input name="UAUISelect">
		<btn name="ps4A" />
	</input>
	<input name="UAUIBack">
		<btn name="ps4B" />
	</input>
	<input name="UAUICtrlX">
		<btn name="ps4X" />
	</input>
	<input name="UAUICtrlY">
		<btn name="ps4Y" />
	</input>
	<input name="UAUIMenu">
		<btn name="ps4Menu" />
	</input>

	<input name="UAUITabLeft">
		<btn name="ps4ShoulderLeft" />
	</input>
	<input name="UAUITabRight">
		<btn name="ps4ShoulderRight" />
	</input>

	<input name="UAUIRightStickHorizontal">
		<btn name="ps4RightThumbHorizontal" />
	</input>
	<input name="UAUIRightStickVertical">
		<btn name="ps4RightThumbVertical" />
	</input>

	<!-- RADIAL MENUS -->

	<input name="UAUIGesturesOpen">
		<btn name="ps4PadRight" />
	</input>
	<input name="UAUIQuickbarRadialOpen">
		<btn name="ps4ShoulderRight" />
	</input>
		<input name="UAUIQuickbarRadialInventoryOpen">
		<btn name="ps4ThumbLeft" />
	</input>
		
	<!-- INVENTORY -->
	<input name="UAUINextUp">
		<btn name="ps4TriggerLeft" />
	</input>
	<input name="UAUINextDown">
		<btn name="ps4TriggerRight" />
	</input>

	<input name="UAUIFastEquipOrSplit">
		<btn name="ps4Y" />
	</input>

	<input name="UAUIFastTransferToVicinity">
		<btn name="ps4X">
			<event name="hold" />
		</btn>
	</input>
	<input name="UAUIExpandCollapseContainer">
		<btn name="ps4ThumbRight" />
	</input>
	<input name="UAUISelectItem">
		<btn name="ps4A" />
	</input>
		<input name="UAUIFastTransferItem" >
		<btn name="ps4X" />
	</input>

	<!-- ****** -->
	<!-- DEBUG SPECIFIC -->
	<!-- ****** -->
	

	<!-- Freefly Camera -->
	<input name="UAMoveUp">
		<btn name="ps4TriggerRight" />
	</input>
	<input name="UAMoveDown">
		<btn name="ps4TriggerLeft" />
	</input>	
	

</preset>